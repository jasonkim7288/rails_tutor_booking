<div class="jumbotron_wrapper">
  <div class="jumbotron">
    <h1 class="text-center">Helping each other will make</h1>
    <h1 class="text-center">you great developers</h1>


    <%= form_with url: search_tutor_session_path, local: "true", class:"form-inline my-4 " do |form| %>
      <%= select_tag :place, TutorSession.places.map {|key, value| [key, value]}, class: "form-control" %>
      <input class="form-control mr-sm-2" type="search" name="name" placeholder="Add category" aria-label="Add">
      <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
    <% end %>
  </div>
</div>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Place</th>
      <th>Category</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Conf url</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Decimal</th>
      <th>Max students num</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutor_sessions.each do |tutor_session| %>
      <tr>
        <td><%= tutor_session.title %></td>
        <td><%= tutor_session.description %></td>
        <td><%= tutor_session.place %></td>
        <td><%= tutor_session.category %></td>
        <td><%= tutor_session.start_datetime %></td>
        <td><%= tutor_session.end_datetime %></td>
        <td><%= tutor_session.conf_url %></td>
        <td><%= tutor_session.address %></td>
        <td><%= tutor_session.latitude %></td>
        <td><%= tutor_session.longitude %></td>
        <td><%= tutor_session.decimal %></td>
        <td><%= tutor_session.max_students_num %></td>
        <td><%= tutor_session.user_id %></td>
        <td><%= link_to 'Show', tutor_session %></td>
        <td><%= link_to 'Edit', edit_tutor_session_path(tutor_session) %></td>
        <td><%= link_to 'Destroy', tutor_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

