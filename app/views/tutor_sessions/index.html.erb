<div class="jumbotron_wrapper">
  <div class="jumbotron">
    <h1 class="text-center">Helping each other will make <br class="d-none d-md-block" />you great developers</h1>
    <%= form_with url: search_tutor_session_path, method: :get, local: "true", class:"form-inline my-5 " do |form| %>
      <div class= "ml-sm-auto mr-sm-auto">
        <%= select_tag :place, options_for_select(TutorSession.places.map {|key, value| [key, value]}), class: "form-control my-3" %>
        <%= select_tag :category, options_for_select(TutorSession.categories.map {|key, value| [key, value]}), class: "form-control my-3 mx-sm-3" %>
        <%= form.submit "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Place</th>
      <th>Category</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Conf url</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Decimal</th>
      <th>Max students num</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutor_sessions.each do |tutor_session| %>
      <tr>
        <td><%= tutor_session.title %></td>
        <td><%= tutor_session.description %></td>
        <td><%= tutor_session.place %></td>
        <td><%= tutor_session.category %></td>
        <td><%= tutor_session.start_datetime %></td>
        <td><%= tutor_session.end_datetime %></td>
        <td><%= tutor_session.conf_url %></td>
        <td><%= tutor_session.address %></td>
        <td><%= tutor_session.latitude %></td>
        <td><%= tutor_session.longitude %></td>
        <td><%= tutor_session.decimal %></td>
        <td><%= tutor_session.max_students_num %></td>
        <td><%= tutor_session.user_id %></td>
        <td><%= link_to 'Show', tutor_session %></td>
        <td><%= link_to 'Edit', edit_tutor_session_path(tutor_session) %></td>
        <td><%= link_to 'Destroy', tutor_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

