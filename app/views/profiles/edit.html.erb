<div class="card-header">
  <h3 class="text-center">Edit Profile</h3>
</div>
<div class="card-body">
  <%= form_with(model: @profile, local: true) do |form| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>

        <ul>
          <% @profile.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group field">
      <%= image_tag "https://avatar.oxro.io/avatar.svg?name=#{@profile.full_name}&length=2", width: 100, style: "border-radius: 50%;"%>
    </div>

    <div class="form-group field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :about_me %>
      <%= form.text_area :about_me, class: "form-control" %>
    </div>

    <div class="form-group actions">
      <%= f.submit class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>