<div class="card-header">
  <h3 class="text-center">Notification settings</h3>
</div>
<div class="card-body">
  <%= form_with(model: @noti_setting, local: true) do |form| %>
    <% if @noti_setting.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@noti_setting.errors.count, "error") %> prohibited this Notification settings from being saved:</h4>

        <ul>
          <% @noti_setting.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group field mb-4">
      <div class="row align-items-center">
        <div class="col-1 pr-0"><%= form.check_box :session_changed %></div>
        <div class="col-11"><%= form.label :session_changed, "I want to receive notifications if there are any changes with sessons I have decided to attend", class:"m-0" %></div>
      </div>
    </div>

    <div class="form-group field mb-4">
      <div class="row align-items-center">
        <div class="col-1 pr-0"><%= form.check_box :one_day_to_start %></div>
        <div class="col-11"><%= form.label :one_day_to_start, "I want to receive notifications one day before the session I will attend starts.", class:"m-0" %></div>
      </div>
    </div>

    <div class="form-group actions">
      <%= form.submit class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>