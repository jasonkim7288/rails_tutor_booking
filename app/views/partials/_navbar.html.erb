<nav class="navbar navbar-expand-md navbar-light" style="background-color: #e1f2fd;">
  <div class="container">
    <%= link_to 'Dev Tutor Booking', root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item mr-5">
          <%= form_with url: search_tutor_session_path, method: :get, class: "form-inline", local: true do |f| %>
            <div id= "search-data-movie" class="form-search search-data input-group" data-names="">
              <%= text_field_tag :search_text_movie, nil, autocomplete: :off, autofocus: :true, class: "form-control search-input my-1 my-md-0", style: "min-width: 250px; max-width: 250px", placeholder: "Search keyword", area: {describedby: "button-addon"} %>
              <div class="input-group-append">
                <%= submit_tag "Search", class: "btn btn-outline-secondary button-home", id: "button-addon" %>
              </div>
            </div>
          <% end %>
        </li>

        <% if user_signed_in? %>
          <%# if the window has a mobile or tablet size, all the menu items will be under the hamburger menu icon %>
          <div class="d-md-none">
            <%= render 'partials/navbar_dropdown' %>
          </div>

          <%# if the window has a desktop size, all the menu items will be under the user name %>
          <div class="d-none d-md-block nav-item dropdown">
            <%= link_to "#", class: "nav-link dropdown-toggle", id: "navbarDropdownMainMenu", role: "button",
                data: {toggle: "dropdown"}, aria: {haspopup: "true", expanded: "false"} do %>
              <%= image_tag @avatar_image_url, class:"initial-avatar"%>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMainMenu">
              <%= render 'partials/navbar_dropdown' %>
            </div>
          </div>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Log in', new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign up', new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
