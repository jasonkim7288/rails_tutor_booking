@import 'variables';

body {
  background-color: $bg-color;
}

a, a:link, a:hover {
  color: inherit;
  text-decoration: none;
}

.main-width {
  max-width: 1340px;
}

// alert message slide up/down effect
@keyframes alert-keyframes {
  0% {left: -100%;}
  5% {left: -10%;}
  70% {left: -10%;}
  100% {left: -100%;}
}

.alert {
  position: fixed;
  top: 56px;
  left: -100%;
  width: 100%;
  opacity: 0.9;
  animation: alert-keyframes 7s;
  border-radius: 10px;
  z-index: 10;
}

.navbar-collapse {
  a {
    &:hover {
      color: black;
      transform: scale(1.03, 1.03);
    }
  }

  .dropdown-menu-right {
    min-width: 300px !important;
  }

  .dropdown-submenu {
    position: relative;
    .dropdown-menu {
      top: 100%;
      right: 100%;
      width: 200px;
      margin-top: -1px;
    }
  }
}

#navbarDropdownMainMenu {
  padding: 0 !important;
  .profile-image {
    border-radius: 50%;
    width: 40px;
    &:hover {
      opacity: 0.8;
    }
  }
}

.dropdown-menu-profile-image {
  border-radius: 50%;
  width: 30px;
}

.jumbotron_wrapper {
  position: relative;
  .jumbotron {
    &::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-image: url("<%= image_path('3') %>");
      background-size: cover;
      background-repeat: no-repeat;
      opacity: 0.8
    }

    h1 {
      font-size: 1.8rem;
      position: relative;
      text-shadow: 0 0  10px white;
    }
    form {
      position: relative;
    }
  }
}

@media (min-width: 768px) {
  .jumbotron_wrapper .jumbotron {
    &::before {
      background-image: url("<%= image_path('home_background') %>");
    }
    h1 {
      font-size: 3rem;
    }
  }
}

.map {
  width: 100%;
  min-height: 300px;
}

@media (min-width: 768px) {
  .map {
    min-height: 86%;
  }
}

.session-card {
  border: none;
  &:hover {
    opacity: 0.8;
    transform: scale(1.03);
  }
  .card-img-top {
    width: 100%;
    height: 110px;
    object-fit: contain;
  }
  .card-body {
    background: $bg-color;
    min-height: 130px;
    max-height: 100px;
    overflow: hidden;
    .card-title {
      font-weight: bold;
      margin-bottom: 0;
    }
    .card-tutor {
      font-weight: lighter;
      font-size: 0.9em
    }
    .card-text {
      margin: 0;
    }
  }
}

.single-session-card {
  border: 2px solid;
  transform: translate(50px, 100px);
  .card-img-top {
    width: 100%;
    height: 110px;
    opject-fit: contain;
  }
}

.show-icon {
  font-size: 1.5em;
}

.show-icon-margin {
  margin-right: 32px;
}

.show-map {
  width: 100%;
  height: 400px;
}

.comment-profile-image {
  border-radius: 50%;
  width: 30px;
  margin-right: 10px;
}